{
    "environment": {
        "host": "MPI4PY_HOST",
        "blacklist": [
            "MPI4PY_NOLOCAL",
            "NERSC_HOST"
        ]
    },
    "systems": {
        "default": {
            "gcc": {
                "sys_prefix": ["/opt/"],
                "mpicc_show": "-show",
                "init": ["export MPI4PY_BUILD_CONFIGURE=ON"],
                "MPICC": "mpicc",
                "CC": "gcc"
            },
            "clang": {
                "sys_prefix": ["/opt/"],
                "mpicc_show": "-show",
                "init": ["export MPI4PY_BUILD_CONFIGURE=ON"],
                "MPICC": "mpicc",
                "CC": "clang"
            }
        }
    }
}
